<body>

    <div class="container">
        <h2>üåü Galer√≠a Animada üåü</h2>
        <img id="photo" src="https://via.placeholder.com/400/FF5733" alt="Imagen">
        <p class="info" id="description">Atardecer vibrante con tonos c√°lidos.</p>
        <div class="buttons">
            <button onclick="prevImage()">‚¨ÖÔ∏è Anterior</button>
            <button onclick="nextImage()">Siguiente ‚û°Ô∏è</button>
        </div>
    </div>

    <script>
        const images = [
            { src: "https://via.placeholder.com/400/FF5733", desc: "Atardecer vibrante con tonos c√°lidos." },
            { src: "https://via.placeholder.com/400/33FF57", desc: "Paisaje verde y monta√±as." },
            { src: "https://via.placeholder.com/400/3357FF", desc: "Cielo azul despejado con nubes." }
        ];

        let index = 0;
        const photo = document.getElementById("photo");
        const description = document.getElementById("description");

        function updateImage() {
            photo.classList.add("fade-out");
            setTimeout(() => {
                photo.src = images[index].src;
                description.innerText = images[index].desc;
                photo.classList.remove("fade-out");
                photo.classList.add("fade-in");
            }, 500);
        }

        function prevImage() {
            index = (index - 1 + images.length) % images.length;
            updateImage();
        }

        function nextImage() {
            index = (index + 1) % images.length;
            updateImage();
        }
    </script>

